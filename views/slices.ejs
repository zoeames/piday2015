<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PiDay 2015</title>

    <!-- Bootstrap Core CSS -->
    <link href="stylesheets/bootstrap/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="stylesheets/bootstrap/simple-sidebar.css" rel="stylesheet">

      <link rel="stylesheet" type="text/css" href="/stylesheets/slices.css">

</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="/">
                        PiDay2015
                    </a>
                </li>
                <li>
                    <a href="/blinkr">Blinkr</a>
                </li>
                <li>
                    <a href="/slices">Slices</a>
                </li>
                <li>
                    <a href="/spiral">Spiral</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">

            <div class="col-xs-12 col-sm-10">
                <div class='colorWheel'>
                      <div class="whiteCircle"></div>
                      <div class="zero numberz"><h1>0</h1></div>
                      <div class="one numberz"><h1>1</h1></div>
                      <div class="two numberz"><h1>2</h1></div>
                      <div class="three numberz"><h1>3</h1></div>
                      <div class="four numberz"><h1>4</h1></div>
                      <div class="five numberz"><h1>5</h1></div>
                      <div class="six numberz"><h1>6</h1></div>
                      <div class="seven numberz"><h1>7</h1></div>
                      <div class="eight numberz"><h1>8</h1></div>
                      <div class="nine numberz"><h1>9</h1></div>
                      <div class="hand"></div>
                </div>
            <div class="col-xs-4">
                      <button class="btn btn-primary" type="submit" id="startButton">START</button>
            </div>
            <div class="col-xs-4">
                      <button class="btn btn-danger" type="submit" id="piReset">RESET</button>
            </div>


          </div><!-- /.col-xs-12 main -->

            </div>
        </div><!-- /#page-content-wrapper -->
        
    </div><!-- /#wrapper -->

    <script src="javascripts/bootstrap/jquery.js"></script>
    <script src="javascripts/bootstrap/bootstrap.min.js"></script>
     <script src="/javascripts/slices.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>

</html>